{
  "manifest_version": 3,
  "name": "WebSocket Sniffer",
  "version": "1.2",
  "description": "監聽網頁上的 WebSocket 收發資料 (支援 JSON/XML 解析)",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"]
}
